<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:background="@drawable/tp_white_bg"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/fragmentContactsEditor"
        android:name="com.sgcd.insubunhae.ui.contacts_viewer.FragmentContactsEditor"
        android:label="FragmentContactsEditor"
        tools:layout="@layout/fragment_contacts_editor">
        <action
            android:id="@+id/action_fragmentContactsEditor_Action"
            app:popUpTo="@id/fragmentContactsObjectViewer"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/fragmentContactsObjectViewer"
        android:name="com.sgcd.insubunhae.ui.contacts_viewer.FragmentContactsObjectViewer"
        android:label="FragmentContactsObjectViewer"
        tools:layout="@layout/fragment_contacts_object_viewer">
        <action
            android:id="@+id/action_fragmentContactsObjectViewer_to_fragmentContactsEditor"
            app:destination="@id/fragmentContactsEditor"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true"
            />


    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sgcd.insubunhae.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_fragmentContactsObjectViewer"
            app:destination="@id/fragmentContactsObjectViewer" />
    </fragment>



    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.sgcd.insubunhae.ui.statistics.StatisticsFragment"
        android:label="@string/title_statistics"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.sgcd.insubunhae.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>